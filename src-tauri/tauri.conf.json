{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Modpest3d",
  "version": "0.1.0",
  "identifier": "com.modpest3d.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://127.0.0.1:5500",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Modpest3d",
        "width": 800,
        "height": 600,
        "resizable": true,
        "dragDropEnabled": false,
        "shadow": true,
        "transparent": true,
        "focus": false,
        "windowClassname": "tauri-window"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
